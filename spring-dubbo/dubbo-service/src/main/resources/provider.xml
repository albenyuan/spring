<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <!--定义了提供方应用信息，用于计算依赖关系；在 dubbo-admin 或 dubbo-monitor 会显示这个名字，方便辨识-->
    <dubbo:application name="demotest-provider" owner="programmer" organization="dubbox"/>


    <!--使用 zookeeper 注册中心暴露服务，注意要先开启 zookeeper-->
    <dubbo:registry address="zookeeper://localhost:2181"/>


    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880"/>

    <!-- 开启dubbo注解支持 -->
    <!-- 扫描注解包路径，多个包用逗号分隔，不填pacakge表示扫描当前ApplicationContext中所有的类 -->
    <dubbo:annotation package="com.albenyuan.dubbo.service.impl"/>
    <!--<context:component-scan base-package="com.albenyuan.dubbo.service.impl"/>-->

    <!--&lt;!&ndash;使用 dubbo 协议实现定义好的 api.PermissionService 接口&ndash;&gt;-->
    <!--<dubbo:service interface="com.albenyuan.dubbo.service.UserService" ref="demoService" protocol="dubbo"/>-->
    <!--&lt;!&ndash;具体实现该接口的 bean&ndash;&gt;-->
    <!--<bean id="demoService" class="com.albenyuan.dubbo.service.impl.UserServiceImpl"/>-->
</beans>